{
  "name": "@pumpn/css-declaration-sorter",
  "version": "6.1.4",
  "description": "Sorts CSS declarations fast and automatically in a certain order.",
  "type": "module",
  "main": "./src/main.mjs",
  "exports": {
    "import": "./src/main.mjs"
  },
  "files": [
    "src/main.mjs",
    "src/shorthand-data.mjs",
    "orders"
  ],
  "scripts": {
    "preversion": "npm test",
    "test": "uvu src .+\\.test\\.mjs",
    "test:ci": "npm test && npm run lint -- --max-warnings 0",
    "lint": "eslint src/*.mjs",
    "scrape": "node src/property-scraper.mjs"
  },
  "devDependencies": {
    "@mdn/browser-compat-data": "^4.1.2",
    "eslint": "^8.2.0",
    "postcss": "^8.3.11",
    "rollup": "^2.59.0",
    "uvu": "^0.5.2"
  },
  "peerDependencies": {
    "postcss": "^8.0.9"
  },
  "engines": {
    "node": ">= 12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Siilwyn/css-declaration-sorter.git"
  },
  "author": "Selwyn <talk@selwyn.cc> (https://selwyn.cc/)",
  "license": "ISC",
  "keywords": [
    "postcss",
    "postcss-plugin",
    "css",
    "declaration",
    "sorter",
    "property",
    "order"
  ]
}